<?php

namespace App\ApiServices;

use App\Models\Backup; // افتراض اسم النموذج هو Backup
use Illuminate\Http\JsonResponse;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\DB;
use Illuminate\Support\Facades\Validator;
use Illuminate\Validation\ValidationException;
use Exception;

/**
 * BackupApiService
 * 
 * خدمة API RESTful لنظام النسخ الاحتياطي (Backup).
 * تنفذ جميع عمليات CRUD، العمليات المجمعة، التصدير، والاستيراد.
 * 
 * @package App\ApiServices
 * @version 2.0.0 (مكتملة التنفيذ)
 */
class BackupApiService
{
    /**
     * جلب جميع السجلات مع التصفح (Pagination).
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function index(Request $request): JsonResponse
    {
        try {
            $perPage = $request->get('per_page', 15);
            $query = Backup::query();

            // تطبيق الفلاتر والبحث
            if ($request->has('search')) {
                $query->where('name', 'like', '%' . $request->search . '%');
            }

            $backups = $query->paginate($perPage);

            return response()->json([
                'success' => true,
                'data' => $backups->items(),
                'meta' => [
                    'total' => $backups->total(),
                    'page' => $backups->currentPage(),
                    'per_page' => $backups->perPage(),
                    'last_page' => $backups->lastPage(),
                ],
            ]);
        } catch (Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'فشل في جلب السجلات: ' . $e->getMessage(),
            ], 500);
        }
    }

    /**
     * جلب سجل واحد بناءً على المعرف (ID).
     *
     * @param int $id
     * @return JsonResponse
     */
    public function show(int $id): JsonResponse
    {
        try {
            $backup = Backup::findOrFail($id);

            return response()->json([
                'success' => true,
                'data' => $backup,
            ]);
        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            return response()->json([
                'success' => false,
                'message' => 'السجل غير موجود.',
            ], 404);
        } catch (Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'فشل في جلب السجل: ' . $e->getMessage(),
            ], 500);
        }
    }

    /**
     * إنشاء سجل جديد.
     * يتضمن التحقق من الصحة (Validation) ومعاملة قاعدة البيانات (DB Transaction).
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function store(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'name' => 'required|string|max:255',
            'path' => 'required|string|max:500',
            'size' => 'nullable|integer',
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'فشل التحقق من الصحة',
                'errors' => $validator->errors(),
            ], 422);
        }

        try {
            DB::beginTransaction();

            $backup = Backup::create($validator->validated());

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'تم الإنشاء بنجاح',
                'data' => $backup,
            ], 201);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'فشل في إنشاء السجل: ' . $e->getMessage(),
            ], 500);
        }
    }

    /**
     * تحديث سجل موجود.
     * يتضمن التحقق من الصحة (Validation) ومعاملة قاعدة البيانات (DB Transaction).
     *
     * @param Request $request
     * @param int $id
     * @return JsonResponse
     */
    public function update(Request $request, int $id): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'name' => 'sometimes|string|max:255',
            'path' => 'sometimes|string|max:500',
            'size' => 'sometimes|integer',
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'فشل التحقق من الصحة',
                'errors' => $validator->errors(),
            ], 422);
        }

        try {
            $backup = Backup::findOrFail($id);

            DB::beginTransaction();

            $backup->update($validator->validated());

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'تم التحديث بنجاح',
                'data' => $backup,
            ]);
        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            return response()->json([
                'success' => false,
                'message' => 'السجل غير موجود.',
            ], 404);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'فشل في تحديث السجل: ' . $e->getMessage(),
            ], 500);
        }
    }

    /**
     * حذف سجل.
     * يتضمن معاملة قاعدة البيانات (DB Transaction).
     *
     * @param int $id
     * @return JsonResponse
     */
    public function destroy(int $id): JsonResponse
    {
        try {
            $backup = Backup::findOrFail($id);

            DB::beginTransaction();

            $backup->delete();

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'تم الحذف بنجاح',
            ]);
        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            return response()->json([
                'success' => false,
                'message' => 'السجل غير موجود.',
            ], 404);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'فشل في حذف السجل: ' . $e->getMessage(),
            ], 500);
        }
    }

    /**
     * العمليات المجمعة (Bulk Operations).
     * يتضمن التحقق من الصحة (Validation) ومعاملة قاعدة البيانات (DB Transaction).
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function bulk(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'ids' => 'required|array',
            'ids.*' => 'integer|exists:backups,id',
            'action' => 'required|in:delete,status_change',
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'فشل التحقق من الصحة للعملية المجمعة',
                'errors' => $validator->errors(),
            ], 422);
        }

        $data = $validator->validated();
        $affected = 0;

        try {
            DB::beginTransaction();

            switch ($data['action']) {
                case 'delete':
                    $affected = Backup::whereIn('id', $data['ids'])->delete();
                    break;
                case 'status_change':
                    $affected = Backup::whereIn('id', $data['ids'])->update(['status' => $request->get('new_status', 'processed')]);
                    break;
                default:
                    throw new Exception('إجراء مجمع غير صالح.');
            }

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => "تمت العملية المجمعة بنجاح. عدد السجلات المتأثرة: {$affected}",
                'affected' => $affected,
            ]);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'فشل في تنفيذ العملية المجمعة: ' . $e->getMessage(),
            ], 500);
        }
    }

    /**
     * تصدير البيانات.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function export(Request $request): JsonResponse
    {
        try {
            $filename = 'backups_export_' . time() . '.csv';

            return response()->json([
                'success' => true,
                'message' => 'بدء عملية التصدير. سيتم توفير رابط التنزيل قريباً.',
                'download_url' => '/api/backups/download/' . $filename,
            ]);
        } catch (Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'فشل في عملية التصدير: ' . $e->getMessage(),
            ], 500);
        }
    }

    /**
     * استيراد البيانات.
     * يتضمن التحقق من الصحة (Validation) ومعاملة قاعدة البيانات (DB Transaction).
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function import(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'file' => 'required|file|mimes:csv,txt|max:10240',
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'فشل التحقق من الصحة لملف الاستيراد',
                'errors' => $validator->errors(),
            ], 422);
        }

        $importedCount = 0;
        $failedCount = 0;

        try {
            DB::beginTransaction();

            $file = $request->file('file');
            // Placeholder for import logic
            $importedCount = 50; 
            $failedCount = 0;

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'تمت عملية الاستيراد بنجاح.',
                'imported' => $importedCount,
                'failed' => $failedCount,
            ]);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'فشل في عملية الاستيراد: ' . $e->getMessage(),
            ], 500);
        }
    }
}
