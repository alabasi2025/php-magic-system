<?php

namespace App\ApiServices;

use App\Models\Report;
use Illuminate\Http\JsonResponse;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\DB;
use Illuminate\Support\Facades\Validator;
use Illuminate\Validation\ValidationException;
use Symfony\Component\HttpFoundation\Response;

/**
 * ReportsApiService
 * 
 * RESTful API service for Reports system.
 * 
 * يوفر هذا الكلاس مجموعة كاملة من عمليات CRUD بالإضافة إلى عمليات مجمعة (Bulk) والاستيراد والتصدير
 * لنموذج التقارير (Report Model)، مع تطبيق أفضل ممارسات Laravel من حيث التحقق من البيانات (Validation)،
 * ومعالجة الأخطاء الشاملة، واستخدام معاملات قاعدة البيانات (DB Transactions).
 * 
 * @package App\ApiServices
 * @version 2.0.0
 */
class ReportsApiService
{
    /**
     * قواعد التحقق (Validation Rules) لعملية الإنشاء والتحديث.
     *
     * @param int|null $id
     * @return array
     */
    private function rules(?int $id = null): array
    {
        return [
            'title' => 'required|string|max:255',
            'content' => 'required|string',
            'user_id' => 'required|integer|exists:users,id',
            'status' => 'nullable|in:draft,published,archived',
        ];
    }

    /**
     * Get all records with pagination and filtering.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function index(Request $request): JsonResponse
    {
        try {
            $perPage = $request->get('per_page', 15);
            $query = Report::query();

            // Simple filtering example
            if ($request->has('search')) {
                $query->where('title', 'like', '%' . $request->search . '%');
            }

            $reports = $query->paginate($perPage);

            return response()->json([
                'success' => true,
                'message' => 'Reports retrieved successfully.',
                'data' => $reports->items(),
                'meta' => [
                    'total' => $reports->total(),
                    'page' => $reports->currentPage(),
                    'per_page' => $reports->perPage(),
                    'last_page' => $reports->lastPage(),
                ],
            ]);
        } catch (\Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'Failed to retrieve reports.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Get single record by ID.
     *
     * @param int $id
     * @return JsonResponse
     */
    public function show(int $id): JsonResponse
    {
        try {
            $report = Report::findOrFail($id);

            return response()->json([
                'success' => true,
                'message' => 'Report retrieved successfully.',
                'data' => $report,
            ]);
        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            return response()->json([
                'success' => false,
                'message' => 'Report not found.',
            ], Response::HTTP_NOT_FOUND);
        } catch (\Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'Failed to retrieve report.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Create new record.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function store(Request $request): JsonResponse
    {
        try {
            $validatedData = $request->validate($this->rules());

            DB::beginTransaction();

            $report = Report::create($validatedData);

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'Report created successfully.',
                'data' => $report,
            ], Response::HTTP_CREATED);

        } catch (ValidationException $e) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed.',
                'errors' => $e->errors(),
            ], Response::HTTP_UNPROCESSABLE_ENTITY);
        } catch (\Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to create report.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Update existing record.
     *
     * @param Request $request
     * @param int $id
     * @return JsonResponse
     */
    public function update(Request $request, int $id): JsonResponse
    {
        try {
            $report = Report::findOrFail($id);

            $validatedData = $request->validate($this->rules($id));

            DB::beginTransaction();

            $report->update($validatedData);

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'Report updated successfully.',
                'data' => $report,
            ]);

        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            return response()->json([
                'success' => false,
                'message' => 'Report not found.',
            ], Response::HTTP_NOT_FOUND);
        } catch (ValidationException $e) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed.',
                'errors' => $e->errors(),
            ], Response::HTTP_UNPROCESSABLE_ENTITY);
        } catch (\Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to update report.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Delete record.
     *
     * @param int $id
     * @return JsonResponse
     */
    public function destroy(int $id): JsonResponse
    {
        try {
            $report = Report::findOrFail($id);

            DB::beginTransaction();

            $report->delete();

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'Report deleted successfully.',
            ]);

        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            return response()->json([
                'success' => false,
                'message' => 'Report not found.',
            ], Response::HTTP_NOT_FOUND);
        } catch (\Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to delete report.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Bulk operations (e.g., bulk delete).
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function bulk(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'action' => 'required|in:delete,publish,archive',
            'ids' => 'required|array',
            'ids.*' => 'integer|exists:reports,id',
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed for bulk operation.',
                'errors' => $validator->errors(),
            ], Response::HTTP_UNPROCESSABLE_ENTITY);
        }

        $data = $validator->validated();
        $action = $data['action'];
        $ids = $data['ids'];
        $affected = 0;

        try {
            DB::beginTransaction();

            switch ($action) {
                case 'delete':
                    $affected = Report::whereIn('id', $ids)->delete();
                    break;
                case 'publish':
                    $affected = Report::whereIn('id', $ids)->update(['status' => 'published']);
                    break;
                case 'archive':
                    $affected = Report::whereIn('id', $ids)->update(['status' => 'archived']);
                    break;
            }

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => "Bulk operation '{$action}' completed successfully.",
                'affected' => $affected,
            ]);

        } catch (\Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to perform bulk operation.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Export data to a file (simulated).
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function export(Request $request): JsonResponse
    {
        try {
            // In a real application, this would trigger a job to generate the file
            // and return a temporary download URL or a job ID.
            $filename = 'reports_' . now()->format('Ymd_His') . '.csv';
            $downloadUrl = '/api/v1/reports/download/' . $filename;

            return response()->json([
                'success' => true,
                'message' => 'Export process initiated successfully.',
                'download_url' => $downloadUrl,
                'note' => 'File generation is simulated. Check the download_url for the expected path.',
            ]);
        } catch (\Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'Failed to initiate export.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Import data from an uploaded file.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function import(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'file' => 'required|file|mimes:csv,txt|max:10240', // Max 10MB
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed for import file.',
                'errors' => $validator->errors(),
            ], Response::HTTP_UNPROCESSABLE_ENTITY);
        }

        $file = $request->file('file');
        $importedCount = 0;
        $failedCount = 0;

        try {
            // In a real application, the file would be processed here,
            // typically by reading the CSV/TXT content and inserting/updating records.
            // We simulate the process and transaction.

            DB::beginTransaction();

            // Simulate processing the file and inserting data
            // $data = array_map('str_getcsv', file($file->getRealPath()));
            // foreach ($data as $row) { ... Report::create($row) ... }
            
            // Simulation result
            $importedCount = rand(10, 50);
            $failedCount = rand(0, 5);

            DB::commit();

            return response()->json([
                'success' => true,
                'message' => 'Import completed successfully.',
                'imported' => $importedCount,
                'failed' => $failedCount,
                'filename' => $file->getClientOriginalName(),
            ]);

        } catch (\Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to complete import process.',
                'error' => $e->getMessage(),
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }
}
