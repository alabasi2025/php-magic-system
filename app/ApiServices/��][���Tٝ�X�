<?php

namespace App\ApiServices;

use App\Models\Setting;
use Illuminate\Http\JsonResponse;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\DB;
use Illuminate\Support\Facades\Validator;
use Illuminate\Validation\Rule;
use Illuminate\Support\Facades\Storage;
use Exception;

/**
 * SettingsApiService
 * 
 * RESTful API service for Settings system. Implements full CRUD, bulk operations,
 * export, and import functionalities following Laravel best practices.
 * 
 * @package App\ApiServices
 * @version 2.0.0
 */
class SettingsApiService
{
    /**
     * Get the validation rules for store operation.
     *
     * @return array
     */
    protected function storeRules(): array
    {
        return [
            'name' => ['required', 'string', 'max:255', 'unique:settings,name'],
            'description' => ['nullable', 'string'],
            'status' => ['required', 'string', 'max:255'],
            'is_active' => ['required', 'boolean'],
        ];
    }

    /**
     * Get the validation rules for update operation.
     *
     * @param int $id
     * @return array
     */
    protected function updateRules(int $id): array
    {
        return [
            'name' => ['required', 'string', 'max:255', Rule::unique('settings', 'name')->ignore($id)],
            'description' => ['nullable', 'string'],
            'status' => ['required', 'string', 'max:255'],
            'is_active' => ['required', 'boolean'],
        ];
    }

    /**
     * Get all records with pagination, search, and filtering.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function index(Request $request): JsonResponse
    {
        try {
            $query = Setting::query();

            // Search
            if ($search = $request->get('search')) {
                $query->where(function ($q) use ($search) {
                    $q->where('name', 'like', "%{$search}%")
                      ->orWhere('description', 'like', "%{$search}%");
                });
            }

            // Filtering by status
            if ($status = $request->get('status')) {
                $query->where('status', $status);
            }

            // Pagination
            $perPage = $request->get('per_page', 15);
            $settings = $query->paginate($perPage);

            return response()->json([
                'success' => true,
                'data' => $settings->items(),
                'meta' => [
                    'total' => $settings->total(),
                    'page' => $settings->currentPage(),
                    'per_page' => $settings->perPage(),
                    'last_page' => $settings->lastPage(),
                ],
            ]);
        } catch (Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'Failed to retrieve settings.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }

    /**
     * Get single record by ID.
     *
     * @param int $id
     * @return JsonResponse
     */
    public function show(int $id): JsonResponse
    {
        try {
            $setting = Setting::findOrFail($id);

            return response()->json([
                'success' => true,
                'data' => $setting,
            ]);
        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            return response()->json([
                'success' => false,
                'message' => 'Setting not found.',
            ], 404);
        } catch (Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'Failed to retrieve setting.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }

    /**
     * Create new record.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function store(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), $this->storeRules());

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed.',
                'errors' => $validator->errors(),
            ], 422);
        }

        DB::beginTransaction();
        try {
            $setting = Setting::create($validator->validated());

            DB::commit();
            return response()->json([
                'success' => true,
                'message' => 'Setting created successfully.',
                'data' => $setting,
            ], 201);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to create setting.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }

    /**
     * Update existing record.
     *
     * @param Request $request
     * @param int $id
     * @return JsonResponse
     */
    public function update(Request $request, int $id): JsonResponse
    {
        $validator = Validator::make($request->all(), $this->updateRules($id));

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed.',
                'errors' => $validator->errors(),
            ], 422);
        }

        DB::beginTransaction();
        try {
            $setting = Setting::findOrFail($id);
            $setting->update($validator->validated());

            DB::commit();
            return response()->json([
                'success' => true,
                'message' => 'Setting updated successfully.',
                'data' => $setting,
            ]);
        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Setting not found.',
            ], 404);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to update setting.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }

    /**
     * Delete record.
     *
     * @param int $id
     * @return JsonResponse
     */
    public function destroy(int $id): JsonResponse
    {
        DB::beginTransaction();
        try {
            $setting = Setting::findOrFail($id);
            $setting->delete();

            DB::commit();
            return response()->json([
                'success' => true,
                'message' => 'Setting deleted successfully.',
            ]);
        } catch (\Illuminate\Database\Eloquent\ModelNotFoundException $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Setting not found.',
            ], 404);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to delete setting.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }

    /**
     * Bulk operations (e.g., delete, update status).
     *
     * Expected request body:
     * {
     *   "action": "delete" | "update_status",
     *   "ids": [1, 2, 3],
     *   "status": "new_status" // Required for update_status
     * }
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function bulk(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'action' => ['required', 'string', Rule::in(['delete', 'update_status'])],
            'ids' => ['required', 'array'],
            'ids.*' => ['integer', 'exists:settings,id'],
            'status' => ['required_if:action,update_status', 'string', 'max:255'],
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed for bulk operation.',
                'errors' => $validator->errors(),
            ], 422);
        }

        $data = $validator->validated();
        $action = $data['action'];
        $ids = $data['ids'];
        $affected = 0;

        DB::beginTransaction();
        try {
            if ($action === 'delete') {
                $affected = Setting::whereIn('id', $ids)->delete();
                $message = "{$affected} settings deleted successfully.";
            } elseif ($action === 'update_status') {
                $affected = Setting::whereIn('id', $ids)->update(['status' => $data['status']]);
                $message = "Status updated for {$affected} settings successfully.";
            }

            DB::commit();
            return response()->json([
                'success' => true,
                'message' => $message,
                'affected' => $affected,
            ]);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to perform bulk operation.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }

    /**
     * Export data to a file (e.g., CSV).
     *
     * This is a simplified implementation. In a real application, a job/queue
     * and a dedicated export library (like Laravel Excel) would be used.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function export(Request $request): JsonResponse
    {
        try {
            // In a real app, this would be a queued job.
            $settings = Setting::all(['id', 'name', 'description', 'status', 'is_active', 'created_at']);
            $csvData = $settings->map(function ($item) {
                return implode(',', $item->toArray());
            })->prepend(implode(',', array_keys($settings->first()->toArray())))->implode("\n");

            $filename = 'settings_export_' . time() . '.csv';
            Storage::put('exports/' . $filename, $csvData);
            $downloadUrl = Storage::url('exports/' . $filename); // Requires public disk configuration

            return response()->json([
                'success' => true,
                'message' => 'Export initiated successfully.',
                'download_url' => $downloadUrl,
            ]);
        } catch (Exception $e) {
            return response()->json([
                'success' => false,
                'message' => 'Failed to export data.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }

    /**
     * Import data from an uploaded file (e.g., CSV).
     *
     * This is a simplified implementation. In a real application, a dedicated
     * import library (like Laravel Excel) and a queued job would be used.
     *
     * @param Request $request
     * @return JsonResponse
     */
    public function import(Request $request): JsonResponse
    {
        $validator = Validator::make($request->all(), [
            'file' => ['required', 'file', 'mimes:csv,txt', 'max:2048'],
        ]);

        if ($validator->fails()) {
            return response()->json([
                'success' => false,
                'message' => 'Validation failed for import file.',
                'errors' => $validator->errors(),
            ], 422);
        }

        $file = $request->file('file');
        $importedCount = 0;
        $failedCount = 0;

        DB::beginTransaction();
        try {
            $path = $file->getRealPath();
            $data = array_map('str_getcsv', file($path));
            $header = array_map('trim', array_shift($data)); // Assuming header row

            foreach ($data as $row) {
                if (count($header) !== count($row)) {
                    $failedCount++;
                    continue;
                }
                $record = array_combine($header, $row);

                // Basic validation for import data
                $importValidator = Validator::make($record, [
                    'name' => ['required', 'string', 'max:255'],
                    'status' => ['required', 'string', 'max:255'],
                    'is_active' => ['required', 'in:0,1,true,false'],
                ]);

                if ($importValidator->fails()) {
                    $failedCount++;
                    continue;
                }

                // Convert is_active to boolean
                $record['is_active'] = filter_var($record['is_active'], FILTER_VALIDATE_BOOLEAN);

                // Only allow fillable fields
                $fillableData = array_intersect_key($record, array_flip((new Setting())->getFillable()));

                Setting::create($fillableData);
                $importedCount++;
            }

            DB::commit();
            return response()->json([
                'success' => true,
                'message' => 'Import completed successfully.',
                'imported' => $importedCount,
                'failed' => $failedCount,
            ]);
        } catch (Exception $e) {
            DB::rollBack();
            return response()->json([
                'success' => false,
                'message' => 'Failed to process import file.',
                'error' => $e->getMessage(),
            ], 500);
        }
    }
}
